# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/econindicator"

# Core API Keys (Required)
FRED_API_KEY="your_fred_api_key_here"
ALPHA_VANTAGE_API_KEY="your_alpha_vantage_api_key_here"
BLS_API_KEY="your_bls_api_key_here"

# Optional API Keys (Enhanced Features)
FINNHUB_API_KEY="your_finnhub_api_key_here"
FMP_API_KEY="your_fmp_api_key_here"
RAPIDAPI_API_KEY="your_rapidapi_key_here"
CENSUS_API_KEY="your_census_api_key_here"
TWELVEDATA_API_KEY="your_twelvedata_api_key_here"
POLYGON_API_KEY="your_polygon_api_key_here"
YAHOO_CLIENT_KEY="your_yahoo_client_key_here"
YAHOO_CLIENT_SECRET="your_yahoo_client_secret_here"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
FRONTEND_URL="http://localhost:3000"

# NextAuth Configuration (for admin auth verification)
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Rate Limiting
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL="info"

# Background Jobs
ENABLE_BACKGROUND_SYNC="true"
SYNC_INTERVAL_HOURS="24"

# Admin Configuration
ADMIN_EMAILS="admin@econindicatordaily.com,dev@econindicatordaily.com"

# Security
JWT_SECRET="your_jwt_secret_here"
ENCRYPTION_KEY="your_32_character_encryption_key"

# Development Settings
DEV_BYPASS_AUTH="false"  # Set to "true" to bypass auth in development (NOT for production)

# Third-party Services
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Analytics (Optional)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
MIXPANEL_TOKEN="your_mixpanel_token"

# Email Service
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your_email@gmail.com"
EMAIL_SERVER_PASSWORD="your_app_password"
EMAIL_FROM="noreply@econindicatordaily.com"